{
  "title": "Replace field and value",
  "type": "object",
  "description": "Replaces an attribute and its value in the JSON response body",
  "properties": {
    "old-field-name": {
      "title": "field to be replaced",
      "type": "string"
    },
    "new-field-value": {
      "title": "new field",
      "type": "string"
    },
    "new-value": {
      "title": "new value",
      "type": "string",
      "@context": {
        "@characteristics": [
          "security:sensitive"
        ]
      }
    }
  },
  "required": [
    "old-field-name",
    "new-field-value",
    "new-value"
  ],
  "unevaluatedProperties": false,
  "@context": {
    "@vocab": "anypoint://vocabulary/policy.yaml#",
    "security": "anypoint://vocabulary/policy.yaml#"
  },
  "$id": "custom-data-masking-simple",
  "$schema": "https://json-schema.org/draft/2019-09/schema"
}